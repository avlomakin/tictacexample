<Page x:Class="UltraTT.View.Game.HotSeatPageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UltraTT.View.Game"
      xmlns:viewModel="clr-namespace:UltraTT.ViewModel.Game"
      d:DataContext="{d:DesignInstance viewModel:HotSeatPageViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="270"
      Title="HotSeatPageView">

    <Grid Height="Auto" Width="Auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Grid Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Content="{Binding CurrentPlayer, Mode=OneWay}"/>
        </Grid>
        


        <Grid  Grid.Row="1" Name="FieldHolder" VerticalAlignment="Top">
            <Canvas ZIndex="5" Name="BigCellsHolder"/>
            <Image Panel.ZIndex="5" Name="FieldImg" 
                   Source="../../src/game/field.png" Stretch="None" IsHitTestVisible="False"/>
        </Grid>
    </Grid>
</Page>
